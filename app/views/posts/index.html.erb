<p style="color: green"><%= notice %></p>

<h1>Posts</h1>
<%= link_to 'New Post', new_post_path, data: {turbo_frame: "new_post"} %>
<%= turbo_frame_tag 'new_post' %>
<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

